<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zd.dao.TabsDao">
<resultMap id="BaseResultMap" type="com.zd.domain.Tabs">
  <id column="tab_id" jdbcType="INTEGER" property="tabId" />
  <result column="name" jdbcType="VARCHAR" property="name" />
  <result column="state" jdbcType="INTEGER" property="state" />
</resultMap>
<sql id="Base_Column_List">
    tab_id, name, state
  </sql>

  <!--查询商品类型对应的商品数量-->
<select id="findCount" resultType="com.zd.dto.TAPDto">
  SELECT t.`tab_id` tabId,t.name,COUNT(product_id) num FROM products p RIGHT JOIN tabs t ON p.`tab_id`=t.`tab_id` GROUP BY t.`tab_id` HAVING num>=0 AND NAME IS NOT NULL ORDER BY num
DESC
</select>
  <!--查询所有商品列表-->
  <select id="findAll" resultMap="BaseResultMap">
    SELECT * from tabs where state=1
  </select>

  <!--根据id删除商品列表-->
  <delete id="delete" parameterType="java.lang.Integer">
    delete from tabs
    where tab_id = #{tabId,jdbcType=INTEGER}
  </delete>

  <!--根据名称模糊查询-->
  <select id="findByName" parameterType="string" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tabs
    where name like #{name}
  </select>

  <!--增加商品类别-->
  <insert id="add" parameterType="com.zd.domain.Tabs">
    insert into tabs(tab_id, name, state) VALUES (#{tabId},#{name},#{state})
  </insert>
  <!--根据id查找商品类别-->
  <select id="findById" parameterType="Integer" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tabs
    where tab_id=#{id}
  </select>
  <!--根据类别名称查询商品类别-->
  <select id="findName" parameterType="String" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tabs
    where name = #{name}
  </select>
  <!--修改商品类型-->
  <update id="update" parameterType="com.zd.domain.Tabs">
    update tabs
    <set>
      <if test="name != null">
        name = #{name,jdbcType=VARCHAR},
      </if>
      <if test="state != null">
        state = #{state,jdbcType=INTEGER},
      </if>
    </set>
    where tab_id = #{tabId,jdbcType=INTEGER}
  </update>
</mapper>